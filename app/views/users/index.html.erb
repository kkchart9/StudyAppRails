<h1>All users</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <button><%= link_to "削除する", user, method: :delete,
                      data: { confirm: "本当に削除しますか？" } %></button>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>