<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <h1><%= @user.email %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user.name, user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <%= link_to user.name, user %>
          <% if current_user.admin? && !current_user?(user) %>
            | <button><%= link_to "削除する", user, method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %></button>
          <% end %>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>